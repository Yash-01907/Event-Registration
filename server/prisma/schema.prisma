generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Uses the pooled connection
  directUrl = env("DIRECT_URL") // Uses the direct connection for migrations
}

enum Role {
  FACULTY
  STUDENT
  ADMIN
}

enum RegType {
  ONLINE
  MANUAL
}

enum Category {
  TECH
  CULTURAL
  SPORTS
}

model User {
  id         String  @id @default(uuid())
  email      String  @unique
  password   String
  name       String
  role       Role    @default(STUDENT)
  rollNumber String?
  branch     String?
  semester   Int?
  phone      String?

  eventsOwned       Event[]        @relation("FacultyOwner")
  coordinatedEvents Event[]        @relation("EventCoordinators")
  registrations     Registration[]
}

model Event {
  id          String    @id @default(uuid())
  name        String
  description String?
  date        DateTime?
  location    String?
  fees        Int       @default(0)
  category    Category?
  posterUrl   String?
  isPublished Boolean   @default(false)

  maxParticipants      Int?
  registrationDeadline DateTime?

  mainCoordinatorId String
  mainCoordinator   User   @relation("FacultyOwner", fields: [mainCoordinatorId], references: [id])

  // New Fields for Team and Custom Forms
  isTeamEvent Boolean @default(false)
  minTeamSize Int     @default(1)
  maxTeamSize Int     @default(1)
  formConfig  Json? // Array of field definitions

  // Sem-control: restrict event to students with semester <= maxSem
  semControlEnabled Boolean @default(false)
  maxSem            Int?

  coordinators  User[]         @relation("EventCoordinators")
  registrations Registration[]
}

model Registration {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  type      RegType  @default(ONLINE)

  eventId   String
  studentId String

  // New Fields for Team and Custom Forms
  teamName    String?
  teamMembers Json? // Array of strings (names or emails)
  formData    Json? // Key-value store for custom form answers

  event   Event @relation(fields: [eventId], references: [id])
  student User  @relation(fields: [studentId], references: [id])

  @@unique([eventId, studentId])
}
